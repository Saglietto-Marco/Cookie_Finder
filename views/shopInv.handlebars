<div class='parallax-container'>
    <div class='container'>
        <div class='seller-info' sellers-id='{{productArr.0.id}}'>
            <h3>{{productArr.0.sellerName}}</h3>
            <h5>When: {{when}}</h5> {{!--need a way to reference the location set by the seller--}}
            <h5>Where: {{productArr.0.sellerCity}}</h5> {{!--need a way to reference the time set by the seller--}}
        </div>
    </div>
    <div class='parallax banner'>
        <img src='/assets/images/cookie_heart_banner.jpg' style='position: relative; right: 50px;'>
    </div>

</div>

<div class="container" id='shop'>
    <div class="row">
        <div class='col s12 l8'>
            <div class='card' id='inventory-view'>
                <div class="card-content">
                    <div class="row">
                        {{#each productArr}}
                            {{> storeFront/itemCard}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

        <div class='col s12 l4'>
            <div class="card">
                <div class="card-content" id='my-cart'>
                    <div>
                        <h5>My Cart:</h5>
                        <hr>
                        <ul>
                            {{> storeFront/cart}}
                        </ul>
                    </div>
    
                    <div id='cart-bottom'>
                        <p id='subtotal'>Subtotal: $</p>
                        <p id='tax'>Tax: $</p>
                        <p id='total'>Total: $</p>
                        <br>
                        <a class="green waves-effect waves-light btn" id='checkout'><i class="material-icons left">local_grocery_store</i>Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


