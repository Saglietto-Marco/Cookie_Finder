<div class="container">

    <div class="row">
        <div class="col s12 m12">
            <div class="card brown lighten-1">
                <div class="card-content white-text">
                    <span class="card-title center-align">{{sellerName}}</span>
                    <p>{{sellerCity}}</p>
                </div>
                <div>
                    <div class="card-content white">
                        {{card-items-block}}
                        <div class="row">
                            <div class="col s12 m4">
                                <div class="card">
                                    <div class="card-image">
                                        <img src="https://s3.r29static.com//bin/entry/070/0,0,2000,2400/720x864/1774479/image.png">
                                        <span class="card-title">{{productName}}</span>
                                    </div>
                                    <div class="card-content">
                                        <p>{{description}}</p>
                                        <p>${{price}}</p>
                                        <p>{{stock}} boxes</p>
                                    </div>
                                    <div class="card-action">
                                        <a class="green waves-effect waves-light btn"><i class="material-icons left">local_grocery_store</i>Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>